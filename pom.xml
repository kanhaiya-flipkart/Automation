                            <receivers>
                                <!-- To Email address -->
                                <receiver>singhalkanhaiya4321@gmail.com</receiver>
                            </receivers>

                            <fileSets>
                                <fileSet>
                                    <!-- Report directory Path -->
                                    <directory>/Users/kanhaiya.singhal/Documents/git_project/Automation/output/
                                    </directory>
                                    <includes>
                                        <!-- Report file name -->
                                        <include>emailable-report.html</include>
                                    </includes>
